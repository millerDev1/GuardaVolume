@model GuardaVolume.Models.Compartimento

@{
    ViewData["Title"] = "Edit";
}

<h1 style="color: red">Compartimentos</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AlugarCompartimentos">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CompartimentoId" />
            <div class="form-group">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" disabled />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tamanho" class="control-label"></label>
                <input asp-for="Tamanho" class="form-control" disabled />
                <span asp-validation-for="Tamanho" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Disponivel" disabled /> @Html.DisplayNameFor(model => model.Disponivel)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Trancado" disabled /> @Html.DisplayNameFor(model => model.Trancado)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label">Nome do locador</label>
                <input asp-for="UsuarioId" class="form-control" disabled asp-items="ViewBag.UsuarioId"/>
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArmarioId" class="control-label">Local do armario</label>
                <select asp-for="ArmarioId" class="form-control" disabled asp-items="ViewBag.ArmarioId"></select>
                <span asp-validation-for="ArmarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Alugar" asp-action="DisponivelCompartimento" asp-route-id="ArmarioId"class="btn btn-success" />
                <input style="background-color: red" type="submit" value="Voltar" asp-action="Create" asp-controller="Usuarios" class="btn btn-success" />

            </div>
        </form>
    </div>
</div>



