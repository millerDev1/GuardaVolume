@model IEnumerable<GuardaVolume.Models.Armario>

@{
    ViewData["Title"] = "Index";
}

<h1 style="color: red">Locais do Armario</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Regiao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PontoY)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PontoX)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Regiao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PontoY)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PontoX)
            </td>
            <td>
                <a asp-action="ReservarCompartimento" asp-route-id="@item.ArmarioId"> Ver Compartimentos do armario</a> >
            </td>
        </tr>
}
    </tbody>
</table>
